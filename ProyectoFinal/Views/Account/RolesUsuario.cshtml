@model ProyectoFinal.Models.ViewModels.RoleUserViewModel
@{
    ViewBag.Title = "Roles de usuario";
}

<h2>Usuario</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title"><h4><strong>@Model.UserName</strong></h4></h3>
        <p>Correo: @Model.Email</p>
    </div>
    <div class="panel-body">
        <strong>
            <button class="btn btn-primary" type="button">
                Roles Asignados: <span class="badge">@Model.Roles.Count</span>
            </button>
        </strong>
        <br />
        <br />
        @if (Model.Roles.Any())
        {
            <ul class="list-group">
                @foreach (var rol in Model.Roles)
                {
                    <li class="list-group-item">@rol</li>
                }
            </ul>
        }
        else
        {
            <h3>No hay roles asinados</h3>
        }
    </div>
    <div class="panel-footer">
        <div>
            @Html.ActionLink("Asignar o Quitar", "RolesUser", null, new { id = Model.UserId }, new { @class = "btn btn-info" })
        </div>
    </div>
</div>

