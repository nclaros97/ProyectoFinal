@model List<ProyectoFinal.Models.ViewModels.RolesUserViewModel>

@{
    ViewBag.Title = "Users Role";
    var userId = ViewBag.userId;
}

<h2>Añadir o quitar usuarios del rol</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <ul class="list-group">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="list-group-item">
                    <div class="form-check m-1">
                        <label class="form-checkbox-label" style="cursor:pointer;">
                            @Html.HiddenFor(m => m[i].Id)
                            @Html.HiddenFor(m => m[i].RolName)
                            @Html.CheckBoxFor(m => m[i].isSelected)
                            @Model[i].RolName
                        </label>
                    </div>
                </div>

            }
        </ul>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<hr />
<div>
    @Html.ActionLink("Regresar", "RolesUsuario", new { id = userId }, htmlAttributes: new { @class = "btn btn-warning" })
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
