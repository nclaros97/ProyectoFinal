@model List<ProyectoFinal.Models.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Usuarios";
}

<h2>Usuarios</h2>
<hr />
<p>
    @Html.ActionLink("Registrar Nuevo", "RegisterUser", null, htmlAttributes: new { @class = "btn btn-success" })
</p>
<hr />
<div class="row">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="~/img/perfil.png" alt="..." width="100">
                <div class="caption">
                    <h3><strong>@Model[i].UserName</strong></h3>
                    <p>@Model[i].UserPhone</p>
                    <p>
                        @Html.ActionLink("Editar", "EditUser", new { id = Model[i].UserId }, htmlAttributes: new { @class = "btn btn-primary", style = "display:list-item!important", role = "button" })

                        @using (Html.BeginForm("DeleteUser", "Account", new { id = Model[i].UserId }, FormMethod.Post, new { style = "display:inline-block!important" }))
                        {
                            <button class="btn btn-danger" type="submit" onclick="return confirm('Esta seguro de eliminar al usuario: @Model[i].UserName?')">Eliminar</button>
                        }

                        &nbsp|&nbsp @Html.ActionLink("Roles", "RolesUsuario", new { id = Model[i].UserId }, htmlAttributes: new { @class = "btn btn-info", role = "button" })
                    </p>

                </div>
            </div>
        </div>
    }
</div>